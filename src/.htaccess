<IfModule mod_rewrite.c>
  Options +FollowSymLinks -MultiViews

  RewriteEngine On

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  RewriteRule ^en/nation/([A-Za-z-0-9_-]+)/?$ /index.php?language=en&view=nation&query=$1 [NC,L]
  RewriteRule ^en/prefecture/([A-Za-z-0-9_-]+)/?$ /index.php?language=en&view=prefecture&query=$1 [NC,L]
  RewriteRule ^en/municipal/([A-Za-z-0-9_-]+)/?$ /index.php?language=en&view=municipal&query=$1 [NC,L]
  RewriteRule ^en/military/([A-Za-z-0-9_-]+)/?$ /index.php?language=en&view=military&query=$1 [NC,L]
  RewriteRule ^en/ /index.php?language=en [NC,L]

  RewriteRule ^ja/nation/([A-Za-z-0-9_-]+)/?$ /index.php?language=ja&view=nation&query=$1 [NC,L]
  RewriteRule ^ja/prefecture/([A-Za-z-0-9_-]+)/?$ /index.php?language=ja&view=prefecture&query=$1 [NC,L]
  RewriteRule ^ja/municipal/([A-Za-z-0-9_-]+)/?$ /index.php?language=ja&view=municipal&query=$1 [NC,L]
  RewriteRule ^ja/military/([A-Za-z-0-9_-]+)/?$ /index.php?language=ja&view=military&query=$1 [NC,L]
  RewriteRule ^ja/ /index.php?language=ja [NC,L]
</IfModule>
