{{>app/appHead}}

<main class="prefecture">
    <h2>Prefectures</h2>
    {{#each prefecture}}
        <div class='row'>
            {{#each this}}
                <div class='col-lg-4'>
                    <a href='/prefecture/{{slug}}'>
                        <div class='flag {{#ifNotEq detail.flag.ratio '3:5'}}flag-scale{{/ifNotEq}}' 
                            style='background-image: url(/assets/img/{{slug}}-large.png)'></div>
                        <p>{{name.en}}</p>
                    </a>
                </div>
            {{/each}}
        </div>
    {{/each}}
</main>

{{>app/appFooter}}